{
  "name": "pr-scout-app",
  "version": "1.0.0",
  "description": "AI-powered PR review menubar app for Mac",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build:css": "tailwindcss -i ./src/renderer/styles/input.css -o ./src/renderer/styles/output.css --minify",
    "watch:css": "tailwindcss -i ./src/renderer/styles/input.css -o ./src/renderer/styles/output.css --watch",
    "prebuild": "pnpm run build:css",
    "build": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg",
    "build:app": "electron-builder --mac dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.nikkaroraa.pr-scout",
    "productName": "PR Scout",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "title": "PR Scout",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [
    "github",
    "pr",
    "review",
    "ai",
    "code-review",
    "electron",
    "menubar"
  ],
  "author": "nikkaroraa",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "menubar": "^9.4.0"
  },
  "packageManager": "pnpm@9.0.0"
}
